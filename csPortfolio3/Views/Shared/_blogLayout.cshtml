 <!-- NAVBAR -->
<body>
        <div class="navbar navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav">
                        <span class="sr-only">Menu</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                        <img src="~/assets/img/butterfly.png" />
                    </a>
                </div>

                <nav class="navbar-collapse collapse" id="main-nav" role="navigation">
                    @Html.Partial("_LoginPartial")
                    <ul class="nav navbar-nav navbar-right nav-text-light">
                        <li class="active"><a href="@Url.Action("Index", "Home")">HOME</a></li>
                        <li><a href="@Server.UrlDecode(Url.RouteUrl(routeValues: new { controller = "Home", action = "Index", id="#about" }))">ABOUT</a></li>
                        <li><a href="@Server.UrlDecode(Url.Action(Url.RouteUrl(new { controller = "Home", action = "Index" }) + "#resume"))">RESUME</a></li>
                        <li><a href="@Server.UrlDecode(Url.RouteUrl(routeValues: new { controller = "Home", action = "Index", id="#works" }))">PORTFOLIO</a></li>
                        <li><a href="@Url.Action("Blog", "Home")">BLOG</a></li>
                        <li><a href="@Server.UrlDecode(Url.RouteUrl(routeValues: new { controller = "Home", action = "Index", id="#contact" }))">CONTACT ME</a></li>                       
                    </ul>
                </nav>
            </div>
        </div>   
    <div class="body-content">
        @RenderBody()
        
    </div>
    <div class="clearfix"></div>
    <footer class="footer">
        <div class="footer-socials">
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-github"></i></a>
            <a href="#"><i class="fa fa-google-plus"></i></a>
        </div>
    </footer>  
   <!--Scripts-->
    <script src="~/assets/js/jquery-2.1.0.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
